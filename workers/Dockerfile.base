FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV CUDA_VISIBLE_DEVICES=""

WORKDIR /opt/workers

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        libxcb1 \
        libgl1 \
        libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

COPY workers/requirements-common.txt /opt/workers/requirements-common.txt
RUN pip install --no-cache-dir -r /opt/workers/requirements-common.txt
